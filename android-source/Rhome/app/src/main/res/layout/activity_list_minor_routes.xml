<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list_minor_routes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="lorentzonsolutions.rhome.activities.ListMinorRoutesActivity">

    <lorentzonsolutions.rhome.customViews.EdoszTextView
        android:id="@+id/activity_list_minor_routes_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_minor_routes_header"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textSize="35sp"/>

    <ListView
        android:id="@+id/list_of_minor_routes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_list_minor_routes_title"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_minor_route_list_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
